<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="Model">
  <class catalog="flyaway" name="Staff" table="staff">
    <id name="number" type="java.lang.Integer">
      <column name="staffnumber"/>
      <generator class="assigned"/>
    </id>
    <property name="name" type="java.lang.String">
      <column length="50" name="name" not-null="true"/>
    </property>
    <property column="type" name="type" not-null="true">
      <type name="org.hibernate.type.EnumType">
        <param name="enumClass">Model.PersonalType</param>
        <param name="type">12</param>
      </type>
    </property>
    <many-to-one class="Airport" column="primaryairport" lazy="false" name="primaryAirport" not-null="true"/>
    <joined-subclass name="Model.AirMarshall" table="airmarshall">
      <key column="staffnumber"/>
      <property column="nationality" name="nationality" not-null="true">
		  <type name="org.hibernate.type.EnumType">
			<param name="enumClass">Model.Nationality</param>
			<param name="type">12</param>
		  </type>
      </property>
      <property name="weaponNumber" type="java.lang.Integer">
        <column name="weaponnumber" not-null="true"/>
      </property>
    </joined-subclass>
  </class>
</hibernate-mapping>
